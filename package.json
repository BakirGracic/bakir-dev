{
	"name": "bakir.dev",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "next dev --experimental-https --turbopack",
		"dev:clean": "rm -rf .next; next dev --experimental-https --turbopack",
		"build": "next build --turbopack",
		"build:clean": "rm -rf .next; next build --turbopack",
		"start": "next start",
		"lint": "next lint",
		"nextjs-codemod": "npx @next/codemod@canary upgrade latest",
		"pkg-update": "npx npm-check-updates -u --format group",
		"i:clean": "rm -rf node_modules/ package-lock.json; npm i",
		"prettier": "prettier --write .",
		"tsc": "tsc --noEmit; rm -f tsconfig.tsbuildinfo"
	},
	"dependencies": {
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"next": "^15.3.1",
		"marked": "^15.0.11"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.16",
		"@heroicons/react": "^2.2.0",
		"@next/third-parties": "^15.3.1",
		"typescript": "^5",
		"@types/node": "^22",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@tailwindcss/postcss": "^4",
		"tailwindcss": "^4",
		"eslint": "^9",
		"eslint-config-next": "^15.3.1",
		"@eslint/eslintrc": "^3",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11"
	}
}
